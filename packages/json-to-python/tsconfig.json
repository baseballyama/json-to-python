{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "target": "ES6",
    "module": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
