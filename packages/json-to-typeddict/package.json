{
  "name": "json-to-typeddict",
  "description": "Simple utility to convert JSON to Python TypedDict",
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "json-to-typeddict": "./dist/cli.mjs"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "format:fix": "prettier --cache --write \"./src/**/*.{js,ts,json}\"",
    "format:check": "prettier --cache --check \"./src/**/*.{js,ts,json}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "publish:check": "publint",
    "test:all": "pnpm format:check && pnpm test && pnpm build && pnpm publish:check",
    "build": "rm -rf dist && tsc -P tsconfig.json"
  }
}
